/* ABOUTME: Styles for event detail page including player list display. */

.player-list {
  margin-top: 10rpx;
}

.player-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.player-item:last-child {
  border-bottom: none;
}

.player-name {
  font-size: 28rpx;
  color: #333;
}

.player-ntrp {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.checkbox-item {
  display: block;
  margin: 10rpx 0;
  font-size: 28rpx;
}

.matchup-item {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.matchup-item:last-child {
  margin-bottom: 0;
}

.matchup-type {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.matchup-versus {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.team-block {
  display: flex;
  flex-direction: column;
}

.team-label {
  font-size: 22rpx;
  color: #999;
}

.team-name {
  font-size: 28rpx;
  font-weight: 500;
}

.vs-text {
  text-align: center;
  color: #999;
  font-size: 22rpx;
  padding: 4rpx 0;
}

.matchup-score {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #4caf50;
  font-weight: 500;
}

.matchup-item.completed {
  border-left: 6rpx solid #4caf50;
}

.team-block.winner {
  background: #e8f5e9;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.winner-badge {
  font-size: 22rpx;
  color: #4caf50;
  font-weight: 600;
  margin-top: 4rpx;
}

.matchup-pending {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  font-style: italic;
}

.completed-notice {
  text-align: center;
  color: #757575;
  font-style: italic;
}
