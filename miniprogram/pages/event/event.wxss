/* ABOUTME: Styles for event detail page including player list, matchups, and result entry. */

.loading-card {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  color: #888;
}

.player-list {
  margin-top: 10rpx;
}

.player-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.player-item:last-child {
  border-bottom: none;
}

.player-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.player-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.player-name {
  font-size: 28rpx;
  color: #333;
}

.player-signup-time {
  font-size: 22rpx;
  color: #888;
}

.player-badges {
  display: flex;
  gap: 8rpx;
}

.player-badge {
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.player-badge.ntrp {
  background: #f3e5f5;
  color: #7b1fa2;
}

.player-badge.gender.male {
  background: #e3f2fd;
  color: #1565c0;
}

.player-badge.gender.female {
  background: #fce4ec;
  color: #c2185b;
}

.player-badge.test {
  background: #fff3e0;
  color: #e65100;
}

.player-remove {
  font-size: 36rpx;
  color: #c62828;
  padding: 0 12rpx;
  cursor: pointer;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.add-player-form {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 16rpx;
}

.matchup-item {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.matchup-item:last-child {
  margin-bottom: 0;
}

.matchup-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.matchup-content {
  flex: 1;
}

.matchup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.matchup-type {
  font-size: 24rpx;
  color: #666;
}

.matchup-versus {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
}

.team-block {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.team-block.team-a {
  text-align: left;
}

.team-block.team-b {
  text-align: right;
}

.team-name {
  font-size: 28rpx;
  font-weight: 500;
}

.vs-text {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  flex-shrink: 0;
}

.matchup-score {
  text-align: center;
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #4caf50;
  font-weight: 600;
}

.matchup-pending {
  text-align: center;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  font-style: italic;
}

.matchup-item.completed {
  border-left: 6rpx solid #4caf50;
}

.team-block.winner {
  background: #e8f5e9;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.winner-badge {
  font-size: 22rpx;
  color: #4caf50;
  font-weight: 600;
  margin-top: 4rpx;
}

.matchup-delete {
  font-size: 40rpx;
  color: #c62828;
  padding: 0 16rpx;
  cursor: pointer;
}

.completed-notice {
  text-align: center;
  color: #757575;
  font-style: italic;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.status-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge.open {
  background: #e3f2fd;
  color: #1565c0;
}

.status-badge.in_progress {
  background: #fff3e0;
  color: #e65100;
}

.status-badge.match_started {
  background: #e8f5e9;
  color: #2e7d32;
}

.status-badge.completed {
  background: #f5f5f5;
  color: #757575;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin: 16rpx 0;
}

.add-matchup-form {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 16rpx;
}

.team-b-section {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e0e0e0;
}

.button-row {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.button-row .button {
  flex: 1;
}

.picker-value {
  padding: 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 10rpx;
}

.match-list {
  margin: 10rpx 0;
}

.match-option {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.match-option.selected {
  border-color: #4caf50;
  background: #f0f8f0;
}

.match-teams {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.match-type {
  font-size: 24rpx;
  color: #666;
}

.sets-container {
  margin: 10rpx 0;
}

.set-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.set-label {
  width: 100rpx;
  font-size: 28rpx;
}

.set-picker {
  display: inline-block;
}

.set-input {
  width: 100rpx;
  padding: 12rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
}

.set-separator {
  margin: 0 16rpx;
  font-size: 28rpx;
}

.tiebreak-label {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.tiebreak-input {
  width: 80rpx;
  padding: 8rpx;
  margin-left: 8rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 24rpx;
}

.set-buttons {
  display: flex;
  gap: 20rpx;
  margin: 10rpx 0;
}

.button.small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.winner-buttons {
  display: flex;
  gap: 20rpx;
  margin: 10rpx 0;
}

.winner-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.winner-btn.selected {
  border-color: #4caf50;
  background: #4caf50;
  color: #fff;
}

.winner-label {
  display: block;
  font-weight: bold;
}

.winner-names {
  display: block;
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}

/* Leaderboard styles */
.leaderboard-table {
  margin-top: 16rpx;
}

.leaderboard-header {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #333;
  font-weight: 600;
  font-size: 26rpx;
  color: #666;
}

.leaderboard-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  align-items: center;
}

.leaderboard-row.top-1 {
  background: linear-gradient(90deg, #fff9e6 0%, #fff 100%);
}

.leaderboard-row.top-2 {
  background: linear-gradient(90deg, #f5f5f5 0%, #fff 100%);
}

.col-player {
  flex: 2;
}

.col-wins {
  flex: 1.5;
  text-align: center;
}

.col-points {
  flex: 1;
  text-align: center;
  font-weight: 600;
}

.col-remarks {
  flex: 1;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 4rpx;
}

.game-diff {
  font-size: 22rpx;
  color: #888;
}

.trophy {
  font-size: 28rpx;
}

.bonus {
  font-size: 24rpx;
  color: #4caf50;
  font-weight: 600;
}

/* Locked notice */
.locked-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  color: #666;
  font-size: 28rpx;
}

.lock-icon {
  font-size: 32rpx;
}

/* Tie-breaker modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-body {
  margin-bottom: 24rpx;
}

.modal-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.tie-player-list {
  margin-top: 20rpx;
}

.tie-player-option {
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tie-player-option.selected {
  border-color: #4caf50;
  background: #e8f5e9;
}

.tie-player-name {
  font-size: 30rpx;
  font-weight: 500;
}

.tie-player-stats {
  font-size: 26rpx;
  color: #666;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-actions .button {
  flex: 1;
}

/* Danger button */
.button.danger {
  background: #c62828;
  color: #fff;
}
