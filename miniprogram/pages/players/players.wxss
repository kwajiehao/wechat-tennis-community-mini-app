/* ABOUTME: Styles for the players list page with filter controls and modal. */

.filter-bar {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6px 16px rgba(30, 42, 58, 0.08);
}

.filter-group {
  margin-bottom: 16rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.filter-option radio {
  transform: scale(0.8);
}

.empty-message {
  text-align: center;
  color: #666;
  padding: 40rpx;
  font-size: 28rpx;
}

.player-card {
  display: flex;
  align-items: center;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.player-details {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.badge.ntrp {
  background: #e3f2fd;
  color: #1565c0;
}

.badge.gender {
  background: #f3e5f5;
  color: #7b1fa2;
}

.badge.points {
  background: #fff3e0;
  color: #e65100;
}

.arrow {
  font-size: 40rpx;
  color: #999;
  margin-left: 16rpx;
}

/* Modal styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 85%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 8rpx;
}

.modal-body {
  padding: 24rpx 32rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-row:last-of-type {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.delete-btn {
  margin-top: 32rpx;
}
