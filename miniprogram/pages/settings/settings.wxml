<view class="container">
  <view class="card">
    <view class="title">{{i18n.settings_title}}</view>
  </view>

  <view class="card">
    <view class="title">{{i18n.profile_language}}</view>
    <view class="label">{{currentLang === 'en' ? 'English' : '中文'}}</view>
    <view class="button secondary" bindtap="switchLanguage">{{i18n.profile_switch_lang}}</view>
  </view>
</view>
