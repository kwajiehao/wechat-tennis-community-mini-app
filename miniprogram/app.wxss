page {
  background: #f5f7fb;
  color: #1e2a3a;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.container {
  padding: 16px;
}

.card {
  background: #ffffff;
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
  box-shadow: 0 6px 16px rgba(30, 42, 58, 0.08);
}

.title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
}

.label {
  font-size: 12px;
  color: #6b7280;
}

.button {
  background: #1e2a3a;
  color: #ffffff;
  border-radius: 8px;
  padding: 10px 12px;
  text-align: center;
  margin-top: 8px;
}

.button.secondary {
  background: #2f5d62;
}

.button.disabled {
  background: #ccc;
  color: #888;
}

.input {
  background: #f0f3f8;
  border-radius: 8px;
  padding: 8px 10px;
  margin: 6px 0 12px 0;
}

.badge {
  display: inline-block;
  background: #eef2ff;
  color: #3730a3;
  padding: 2px 8px;
  border-radius: 999px;
  font-size: 12px;
  margin-right: 6px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin: 8px 0;
}
